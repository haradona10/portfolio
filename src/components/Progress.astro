---
const { title, progress } = Astro.props;
---
<li class="progress">
    <h3>{title}</h3>
    <div class="skill-shadow">
        <div class="skill-bar" style={`width: ${progress}%`}>
        <span class="value">{progress}</span>
      </div>
    </div>
</li>

<style define:vars={{progress}}>
    li.progress {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    li.progress .skill-shadow {
        background-color: rgba(100,100,100,0.2);
        border-radius: 1rem;
        width: 100%;
    }
    .skill-shadow .skill-bar {
        background-color: red;
        width: var(--progress);
        padding: 1rem;
        border-radius: 1rem;
        font-style: italic;
        color: #fefefe;
        text-shadow: 1px 1px 2px darkslategrey;
        font-size: 1.1em;
    }
</style>